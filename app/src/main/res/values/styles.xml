<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_bottom_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:drawablePadding">@dimen/padding_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_25sp</item>
        <item name="android:textColor">@drawable/main_bottom_text_selector</item>
    </style>

    <style name="main_home_top_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
