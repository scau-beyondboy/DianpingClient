<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/pull_to_refresh_footer"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >
  <TextView
    android:id="@+id/pull_to_refresh_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_8dp"
    android:gravity="center"
    android:textSize="@dimen/textsize_20sp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_centerHorizontal="true"
    android:text="上拉可以加载更多"
    />
  <ProgressBar
    android:id="@+id/pull_to_refresh_footer_progressbar"
    android:layout_width="@dimen/width_30dp"
    android:layout_centerInParent="true"
    android:layout_height="@dimen/height_30dp"
    android:layout_toLeftOf="@id/pull_to_refresh_more"
    android:layout_marginRight="15dp"
    android:visibility="gone"
    />
  </RelativeLayout>